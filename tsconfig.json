{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES5",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "build",
      "lib": ["es6", "dom", "ES2016", "ESNext"],
      "downlevelIteration": true
    },
    "compileOnSave": true,
    "exclude": ["test"],
    "include": [
      "src",
      "test.d.ts",
    ]
  }
  